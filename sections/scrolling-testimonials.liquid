{{ 'scrolling-testimonials.css' | asset_url | stylesheet_tag }}

{% assign section_id = 'scrolling-testimonials-' | append: section.id %}

<div class="scrolling-testimonials" id="{{ section_id }}">
  {% if section.settings.title != blank or section.settings.subtitle != blank %}
    <div class="scrolling-testimonials__header">
      {% if section.settings.title != blank %}
        <h2 class="scrolling-testimonials__title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <div class="scrolling-testimonials__subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}
    </div>
  {% endif %}
  
  <div class="scrolling-testimonials__slider-container">
    <div class="scrolling-testimonials__slider">
      {% for block in section.blocks %}
        <div class="scrolling-testimonials__slide" {{ block.shopify_attributes }}>
          <div class="scrolling-testimonials__image-container">
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | img_url: '1400x' }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
                class="scrolling-testimonials__image"
              >
            {% else %}
              {{ 'lifestyle-1' | placeholder_svg_tag: 'scrolling-testimonials__image placeholder-svg' }}
            {% endif %}
            
            <div class="scrolling-testimonials__content">
              {% if block.settings.title != blank %}
                <h3 class="scrolling-testimonials__content-title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="scrolling-testimonials__content-text">{{ block.settings.text }}</div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    
    <button class="scrolling-testimonials__nav scrolling-testimonials__nav--prev" aria-label="{{ 'sections.slideshow.previous_slide' | t }}">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
      </svg>
    </button>
    <button class="scrolling-testimonials__nav scrolling-testimonials__nav--next" aria-label="{{ 'sections.slideshow.next_slide' | t }}">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
      </svg>
    </button>
  </div>
  
  {% if section.settings.button_text != blank and section.settings.button_link != blank %}
    <div class="scrolling-testimonials__button-container">
      <a href="{{ section.settings.button_link }}" class="scrolling-testimonials__button">
        {{ section.settings.button_text }}
      </a>
    </div>
  {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // 获取所有需要的元素
  const sliderContainer = document.querySelector('.scrolling-testimonials__slider-container');
  const slider = document.querySelector('.scrolling-testimonials__slider');
  const slides = Array.from(document.querySelectorAll('.scrolling-testimonials__slide'));
  const prevBtn = document.querySelector('.scrolling-testimonials__nav--prev');
  const nextBtn = document.querySelector('.scrolling-testimonials__nav--next');
  
  // 如果没有足够的幻灯片，隐藏导航按钮
  if (!slider || slides.length <= 1) {
    if (prevBtn) prevBtn.style.display = 'none';
    if (nextBtn) nextBtn.style.display = 'none';
    return;
  }
  
  // 设置变量
  let currentIndex = 0;
  let autoplayInterval;
  const autoplayDelay = {{ section.settings.autoplay_speed }};
  const shouldAutoplay = {{ section.settings.autoplay | json }};
  
  // 克隆第一个和最后一个幻灯片，添加到相应的位置
  const firstSlideClone = slides[0].cloneNode(true);
  const lastSlideClone = slides[slides.length - 1].cloneNode(true);
  
  slider.appendChild(firstSlideClone);
  slider.insertBefore(lastSlideClone, slides[0]);
  
  // 重新获取所有幻灯片（包括克隆的）
  const allSlides = Array.from(document.querySelectorAll('.scrolling-testimonials__slide'));
  
  // 初始位置设置为第一个真实幻灯片（索引1，因为0是克隆的最后一个）
  currentIndex = 1;
  
  // 更新滑块位置的函数
  function updateSliderPosition(animate = true) {
    if (!slider || !allSlides.length) return;
    
    const slideWidth = allSlides[0].offsetWidth;
    
    if (animate) {
      slider.style.transition = 'transform 0.5s ease';
    } else {
      slider.style.transition = 'none';
    }
    
    slider.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
  }
  
  // 处理无限滚动
  function handleInfiniteScroll() {
    if (currentIndex === 0) {
      // 如果是克隆的最后一个幻灯片，跳转到真实的最后一个
      setTimeout(() => {
        slider.style.transition = 'none';
        currentIndex = allSlides.length - 2;
        updateSliderPosition(false);
      }, 500);
    } else if (currentIndex === allSlides.length - 1) {
      // 如果是克隆的第一个幻灯片，跳转到真实的第一个
      setTimeout(() => {
        slider.style.transition = 'none';
        currentIndex = 1;
        updateSliderPosition(false);
      }, 500);
    }
  }
  
  // 切换到指定幻灯片
  function goToSlide(index) {
    currentIndex = index;
    updateSliderPosition();
  }
  
  // 自动播放功能
  function startAutoplay() {
    if (autoplayInterval) clearInterval(autoplayInterval);
    
    if (allSlides.length <= 1) return;
    
    autoplayInterval = setInterval(function() {
      goToSlide(currentIndex + 1);
    }, autoplayDelay);
  }
  
  function stopAutoplay() {
    if (autoplayInterval) {
      clearInterval(autoplayInterval);
      autoplayInterval = null;
    }
  }
  
  // 添加按钮点击事件
  if (prevBtn) {
    prevBtn.addEventListener('click', function() {
      goToSlide(currentIndex - 1);
      stopAutoplay();
    });
  }
  
  if (nextBtn) {
    nextBtn.addEventListener('click', function() {
      goToSlide(currentIndex + 1);
      stopAutoplay();
    });
  }
  
  // 监听过渡结束事件
  slider.addEventListener('transitionend', handleInfiniteScroll);
  
  // 监听窗口大小变化
  window.addEventListener('resize', function() {
    updateSliderPosition(false);
  });
  
  // 鼠标悬停时暂停自动播放
  if (sliderContainer) {
    sliderContainer.addEventListener('mouseenter', stopAutoplay);
    sliderContainer.addEventListener('mouseleave', function() {
      if (shouldAutoplay) {
        startAutoplay();
      }
    });
  }
  
  // 初始化
  updateSliderPosition(false);
  
  // 如果需要自动播放，启动它
  if (shouldAutoplay) {
    startAutoplay();
  }
});
</script>

{% schema %}
{
  "name": "滚动展示",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "滚动展示"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "副标题",
      "default": "<p>分享您的顾客反馈或产品亮点</p>"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "自动播放",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3000,
      "max": 9000,
      "step": 500,
      "unit": "ms",
      "label": "自动播放速度",
      "default": 5000
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文字",
      "default": "查看更多"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "按钮链接"
    }
  ],
  "blocks": [
    {
      "name": "幻灯片",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图片"
        },
        {
          "type": "text",
          "id": "title",
          "label": "标题",
          "default": "幻灯片标题"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "文本",
          "default": "<p>分享您的产品或客户评价</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "滚动展示",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %} 