{{ 'section-energy-guidance.css' | asset_url | stylesheet_tag }}

<div class="energy-guidance{% if section.settings.full_width %} energy-guidance--full-width{% endif %}">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="energy-guidance__title h1">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="energy-guidance__grid" style="--items-per-row: {{ section.settings.items_per_row }};">
      {%- for block in section.blocks -%}
        <div class="energy-guidance__item" {{ block.shopify_attributes }}>
          {% if block.settings.link != blank %}<a href="{{ block.settings.link }}" class="energy-guidance__link">{% endif %}
            <div class="energy-guidance__icon-wrapper">
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 120 | image_tag:
                  loading: 'lazy',
                  width: 120,
                  height: 120,
                  class: 'energy-guidance__icon'
                }}
              {%- endif -%}
            </div>
            {%- if block.settings.title != blank -%}
              <div class="energy-guidance__text h3">{{ block.settings.title }}</div>
            {%- endif -%}
          {% if block.settings.link != blank %}</a>{% endif %}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "能量指引",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "能量指引"
    },
    {
      "type": "range",
      "id": "items_per_row",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4,
      "label": "每行显示数量"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "全宽显示",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "guidance_item",
      "name": "能量项",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图标"
        },
        {
          "type": "text",
          "id": "title",
          "label": "标题",
          "default": "能量"
        },
        {
          "type": "url",
          "id": "link",
          "label": "链接"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "能量指引",
      "blocks": [
        {
          "type": "guidance_item"
        },
        {
          "type": "guidance_item"
        },
        {
          "type": "guidance_item"
        },
        {
          "type": "guidance_item"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
.energy-guidance {
  margin: 3rem 0;
}

.energy-guidance--full-width {
  margin: 0;
  background: #f7f7f7;
  padding: 3rem 0;
}

.energy-guidance__title {
  text-align: center;
  margin-bottom: 2rem;
}

.energy-guidance__grid {
  display: grid;
  grid-template-columns: repeat(var(--items-per-row, 4), 1fr);
  gap: 2rem;
  justify-items: center;
}

.energy-guidance__item {
  text-align: center;
  transition: transform 0.3s ease;
}

.energy-guidance__item:hover {
  transform: translateY(-5px);
}

.energy-guidance__link {
  text-decoration: none;
  color: inherit;
  display: block;
}

.energy-guidance__icon-wrapper {
  width: 120px;
  height: 120px;
  margin: 0 auto 1rem;
  border-radius: 50%;
  overflow: hidden;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: box-shadow 0.3s ease;
}

.energy-guidance__item:hover .energy-guidance__icon-wrapper {
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.energy-guidance__icon {
  width: 100%;
  height: 100%;
  object-fit: contain;
  transition: transform 0.3s ease;
}

.energy-guidance__item:hover .energy-guidance__icon {
  transform: scale(1.1);
}

.energy-guidance__text {
  margin-top: 1rem;
  font-weight: 500;
}

@media screen and (max-width: 749px) {
  .energy-guidance__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  
  .energy-guidance__icon-wrapper {
    width: 100px;
    height: 100px;
  }
}
</style> 