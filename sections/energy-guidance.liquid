{{ 'section-energy-guidance.css' | asset_url | stylesheet_tag }}

<div class="energy-guidance">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="energy-guidance__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="energy-guidance__container">
      <div class="energy-guidance__scroll-container">
        {%- for block in section.blocks -%}
          <div class="energy-guidance__item" {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}<a href="{{ block.settings.link }}" class="energy-guidance__link">{% endif %}
              <div class="energy-guidance__icon-wrapper">
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 80 | image_tag:
                    loading: 'lazy',
                    width: 80,
                    height: 80,
                    class: 'energy-guidance__icon'
                  }}
                {%- endif -%}
              </div>
              {%- if block.settings.title != blank -%}
                <div class="energy-guidance__text">{{ block.settings.title }}</div>
              {%- endif -%}
            {% if block.settings.link != blank %}</a>{% endif %}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "能量指引",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "ENERGY GUIDANCE"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "标题对齐方式",
      "options": [
        {
          "value": "left",
          "label": "靠左"
        },
        {
          "value": "center",
          "label": "居中"
        }
      ],
      "default": "left"
    }
  ],
  "blocks": [
    {
      "type": "guidance_item",
      "name": "能量项",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图标"
        },
        {
          "type": "text",
          "id": "title",
          "label": "标题",
          "default": "能量"
        },
        {
          "type": "url",
          "id": "link",
          "label": "链接"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "能量指引",
      "blocks": [
        {
          "type": "guidance_item"
        },
        {
          "type": "guidance_item"
        },
        {
          "type": "guidance_item"
        },
        {
          "type": "guidance_item"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
.energy-guidance {
  background-color: #2b2b2b;
  color: #ffffff;
  padding: 60px 0;
}

.energy-guidance__title {
  font-size: 28px;
  font-weight: 500;
  margin: 0 0 40px;
  letter-spacing: 0.05em;
}

.energy-guidance__container {
  position: relative;
  margin: 0 -20px;
}

.energy-guidance__scroll-container {
  display: flex;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  padding: 0 20px;
  gap: 30px;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE and Edge */
}

.energy-guidance__scroll-container::-webkit-scrollbar {
  display: none; /* Chrome, Safari and Opera */
}

.energy-guidance__item {
  flex: 0 0 auto;
  text-align: center;
  scroll-snap-align: start;
  width: auto;
  min-width: 100px;
}

.energy-guidance__link {
  text-decoration: none;
  color: inherit;
  display: block;
}

.energy-guidance__icon-wrapper {
  width: 80px;
  height: 80px;
  margin: 0 auto 16px;
  border-radius: 50%;
  border: 1px solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: border-color 0.3s ease;
}

.energy-guidance__icon {
  width: 40px;
  height: 40px;
  object-fit: contain;
  filter: brightness(0) invert(1);
}

.energy-guidance__text {
  background: #ffffff;
  color: #2b2b2b;
  padding: 6px 20px;
  border-radius: 50px;
  font-size: 14px;
  font-weight: 500;
  display: inline-block;
  min-width: 80px;
}

.energy-guidance__item:hover .energy-guidance__icon-wrapper {
  border-color: rgba(255, 255, 255, 0.8);
}

@media screen and (max-width: 749px) {
  .energy-guidance {
    padding: 40px 0;
  }

  .energy-guidance__title {
    font-size: 24px;
    margin-bottom: 30px;
    text-align: center;
  }
}
</style> 