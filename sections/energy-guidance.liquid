{{ 'section-energy-guidance.css' | asset_url | stylesheet_tag }}

<div class="energy-guidance{% if section.settings.full_width %} energy-guidance--full-width{% endif %}" style="background-color: {{ section.settings.background_color }};">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="energy-guidance__title h1">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="energy-guidance__container">
      <div class="energy-guidance__grid">
        {%- for block in section.blocks -%}
          <div class="energy-guidance__item" {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}<a href="{{ block.settings.link }}" class="energy-guidance__link">{% endif %}
              <div class="energy-guidance__icon-wrapper">
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 120 | image_tag:
                    loading: 'lazy',
                    width: 120,
                    height: 120,
                    class: 'energy-guidance__icon'
                  }}
                {%- endif -%}
              </div>
              {%- if block.settings.title != blank -%}
                <div class="energy-guidance__text">{{ block.settings.title }}</div>
              {%- endif -%}
            {% if block.settings.link != blank %}</a>{% endif %}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<style>
.energy-guidance {
  padding: 3rem 0;
  background: #2B2B2B;
  color: #fff;
}

.energy-guidance__title {
  color: #fff;
  margin-bottom: 3rem;
  font-size: 2rem;
}

.energy-guidance__container {
  position: relative;
  margin: 0 -1.5rem;
  padding: 0 1.5rem;
}

.energy-guidance__grid {
  display: grid;
  grid-template-columns: repeat(var(--items-per-row, 8), 1fr);
  gap: 2rem;
  justify-items: center;
}

.energy-guidance__item {
  text-align: center;
}

.energy-guidance__icon-wrapper {
  width: 120px;
  height: 120px;
  margin: 0 auto 1rem;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.energy-guidance__icon {
  width: 60%;
  height: 60%;
  object-fit: contain;
}

.energy-guidance__text {
  background: #fff;
  color: #000;
  padding: 0.5rem 1.5rem;
  border-radius: 50px;
  display: inline-block;
  font-size: 0.9rem;
  line-height: 1.2;
}

@media screen and (max-width: 749px) {
  .energy-guidance__container {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .energy-guidance__container::-webkit-scrollbar {
    display: none;
  }

  .energy-guidance__grid {
    display: flex;
    grid-template-columns: none;
    gap: 1.5rem;
    padding: 0.5rem 0;
    width: max-content;
  }

  .energy-guidance__item {
    flex: 0 0 auto;
    width: 120px;
  }

  .energy-guidance__icon-wrapper {
    width: 100px;
    height: 100px;
  }
}
</style>

